{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    },
    "LogPath": "Logs"
    //"LogPath": "/var/www/ommo-backend/Logs"
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=db;Database=ommo;Username=appuser;Password=${DB_PASSWORD}"
  },
  "Jwt": {
    "Key": "${JWT_KEY}",
    "Issuer": "https://localhost:5000",
    "Audience": "https://localhost:5000"
  },
  "Auth": {
    "ResetTokenSecret": "${RESET_TOKEN_SECRET}",
    "ResetTokenExpiryMinutes": 20,
    "Issuer": "https://localhost:5000",
    "Audience": "https://localhost:5000"
  },
  "Encryption": {
    "Key": "${ENCRYPTION_KEY}"
  },
  "EmailSettings": {
    "Server": "smtppro.zoho.com",
    "Port": 587,
    "Username": "info@ommo.ai",
    "Password": "${SMTP_PASSWORD}",
    "EmailFrom": "info@ommo.ai",
    "ImapHost": "imappro.zoho.com",
    "ImapPort": 993,
    "UseSsl": true,
    "PollMinutes": 10
  },
  "Twilio": {
    "AccountSid": "${TWILIO_ACCOUNT_SID}",
    "AuthToken": "${TWILIO_AUTH_TOKEN}",
    "FromPhoneNumber": "+18779470411"
  },
  "AppSettings": {
    "ServerUrl": "https://localhost:5055",
    "ClientBaseUrl": "https://ommo.ai",
    "ServerBaseDirectory": "/app/",
    "ServerDirectory": "/app/ProfilePicture",
    "ServerDocumentDirectory": "/app/Documents",
    "ServerLogoDirectory": "/app/Logo"
  },
  "AllowedHosts": "*"
}
